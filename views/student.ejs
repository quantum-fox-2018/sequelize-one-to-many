<html>
  <body>
    <h1>Student's Page</h2>
    <p><a href="/student/add">Add Student</a></p>
    <table border="1" width="50%">
      <tr>
        <th>id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Option</th>
      </tr>
          <% for(var i = 0; i < all_student.length; i++) { %>
          <tr>
            <td><%= all_student[i].id %></td>
            <td><%= all_student[i].first_name %></td>
            <td><%= all_student[i].last_name %></td>
            <td><%= all_student[i].email %></td>
            <td><a href='/student/edit/<%= all_student[i].id %>'>Edit</a> | <a href='/student/delete/<%= all_student[i].id %>' onclick="return confirm('delete this student?')">Delete</a></td>
          </tr>
          <% } %>
    </table>
    <p><a href="/"> home </a></p>
  </body>
</html>
