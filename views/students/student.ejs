<%- include('../partials/header.ejs') %>
<%- include('../partials/menu.ejs') %>
<div class="container">
    <a href="/students/add">Add Student</a>
    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% no =1 %>
            <% for(let i=0; i<data.length; i++){ %>
                <tr>
                    <td><%= no %></td>
                    <td><%= data[i].first_name %></td>
                    <td><%= data[i].last_name %></td>
                    <td><%= data[i].email %></td>
                    <td>
                        <a href="/students/edit/<%= data[i].id %>">EDIT</a>
                        <a href="/students/delete/<%= data[i].id %>">DELETE</a>
                    </td>
                </tr>
                <% no++ %>
            <% } %>
        </tbody>
    </table>
</div>