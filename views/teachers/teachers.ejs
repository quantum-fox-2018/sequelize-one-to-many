<%- include ../partials/header.ejs%>
  <h3>Data Teachers</h3></br>
  <a href="teachers/add">Add Teacher</a></br></br>
  <table>
    <thead>
      <th>No</th>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th>Options</th>
    </thead>
    <tbody>
      <% for(let i=0; i<teachers.length; i++){ %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= teachers[i].id %></td>
          <td><%= teachers[i].firstName %></td>
          <td><%= teachers[i].lastName %></td>
          <td><%= teachers[i].email %></td>
          <% if(teachers[i].SubjectId==null){ %>
            <td>unassigned</td>
          <% } else { %>
            <td><%= teachers[i].SubjectId %></td>
          <% } %>
          <td>
            <a href="/teachers/<%= teachers[i].id %>/edit">Edit</a>
            <a href="/teachers/<%= teachers[i].id %>/delete">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
<%- include ../partials/footer.ejs%>
