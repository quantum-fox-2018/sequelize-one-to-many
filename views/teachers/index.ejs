<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/css.table.ejs')  %>
  </head>
  <body>

    <h2>Data teachers</h2>
    <h4><a href="/">Home</a></h4>
    <h4><a href="/teachers/add">Add Teacher</a></h4>

    <table>
      <tr>
        <th>id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Options</th>
      </tr>
        <%
          data_teachers.forEach(function(teacher){%>
          <tr>
            <td><%= teacher.id%></td>
            <td><%= teacher.first_name%></td>
            <td><%= teacher.last_name%></td>
            <td><%= teacher.email%></td>
            <td>
              <%
                if(teacher.SubjectId !==null){%>
                  <%= teacher.Subject.subject_name%>
                <%}else{%>
                  Unassigned
                <%}
              %>
            </td>
            <td><a href="/teachers/edit/<%= teacher.id%>">edit</a> | <a href="/teachers/delete/<%= teacher.id%>" onclick="return confirm('Are you sure want delete this teacher?')">delete</a></td>
          </tr>
          <%})
        %>
    </table>

  </body>
</html>
