<!DOCTYPE html>
<html>
  <head>
    <style>

    body {
      background-image: url('https://image.freepik.com/free-vector/school-building_23-2147521232.jpg');
      background-size: cover;
    }


    h2 {
      font-family: arial, sans-serif;
      font-size: 25px;
      text-align: center;
    }

    h4 {
      font-family: arial, sans-serif;
      font-size: 15px;
      text-align: center;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #F0FFFF;
    }
    tr:nth-child(odd) {
        background-color: #E0FFFF;
    }
    </style>
  </head>
  <body>

    <h2>Data teachers</h2>
    <h4><a href="/">Home</a></h4>
    <h4><a href="/teachers/add">Add Teacher</a></h4>

    <table>
      <tr>
        <th>id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Options</th>
      </tr>
        <%
          data_teachers.forEach(function(teacher){%>
          <tr>
            <td><%= teacher.id%></td>
            <td><%= teacher.first_name%></td>
            <td><%= teacher.last_name%></td>
            <td><%= teacher.email%></td>
            <td>
              <%
                if(teacher.SubjectId !==null){%>
                  <%= teacher.Subject.subject_name%>
                <%}else{%>
                  Unassigned
                <%}
              %>
            </td>
            <td><a href="/teachers/edit/<%= teacher.id%>">edit</a> | <a href="/teachers/delete/<%= teacher.id%>" onclick="return confirm('Are you sure want delete this teacher?')">delete</a></td>
          </tr>
          <%})
        %>
    </table>

  </body>
</html>
