<html>
  <head>
    <title>Students Edit</title>
  </head>
  <body>
    <h1>Edit Students Data</h1>
    <a href="/students/">Show All Data</a>

    <form action="/students/edit/<%= student.id %>" method="post">
      First name:<br>
      <input type="text" name="first_name" value="<%= student.first_name %>"><br>
      Last name:<br>
      <input type="text" name="last_name" value="<%= student.last_name %>"><br>
      Email:<br>
      <input type="text" name="email" value="<%= student.email %>"><br>
      <br>
      <button type="submit">Update</button>
    </form>
  </body>
</html>
