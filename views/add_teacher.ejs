<html>
  <head>
      <title></title>
  </head>
  <body>
    <h1></h1>
    <a href=""></a>
    <form action="/teacher/add" method="POST">
    <table>
        <tr>
          <td>First Name :</td>
          <td><input type="text" name="fname" /></td>
        </tr>
        <tr>
          <td>Last Name :</td>
          <td><input type="text" name="lname" /></td>
        </tr>
        <tr>
          <td>Email :</td>
          <td><input type="text" name="email" /></td>
        </tr>
        <tr>
          <td>Subject :</td>
          <td>
            <select name = "subject">
              <option value='0'> ---- </option>
              <% for(let i = 0; i < subjects.length; i++){%>
                <option value='<%- subjects[i].id %>'> <%= subjects[i].name %> </option>
              <% } %>
            </select>
          </td>
        </tr>
        <tr>
          <td><input type="submit" value="Add Teacher" /></td>
        </tr>
    </table>
  </form>
  </body>
</html>
