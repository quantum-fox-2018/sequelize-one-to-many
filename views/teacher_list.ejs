<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teacher List</title>
  </head>
  <body>
    <%- include("_logo.ejs",{title:"sekolah sma"}) %>
    <h1></h1>
    <div class="container">
      <h1>Teacher List</h1>
      <table class="table">
        <tr>
          <th>id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Options</th>
        </tr>

        <%for(let i = 0; i<teacherData.length; i++){%>
          <tr>
            <td><%=teacherData[i].id%></td>
            <td><%=teacherData[i].firstName%></td>
            <td><%=toSpd(teacherData[i].lastName)%></td>
            <td><%=teacherData[i].email%></td>
            <%if(teacherData[i].Subject === null){%>
              <td>belum di assign</td>
            <%}else{%>
              <td><%=teacherData[i].Subject.subjectName%></td>
            <%}%>
            <td><a href="/teachers/edit/<%=teacherData[i].id%>">Edit</a> |
              <a href="/teachers/delete/<%=teacherData[i].id%>" onclick="return confirm('Are you sure you want to delete this item?');">
                Delete
              </a>
              </td>
          </tr>
        <%}%>
      </table>
    </div>
  </body>
</html>
