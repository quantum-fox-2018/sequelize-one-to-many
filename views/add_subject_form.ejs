<html>
  <head>
    <style>

    body {
      background-image: url('https://image.freepik.com/free-vector/school-building_23-2147521232.jpg');
      background-size: cover;
    }
    
    h2 {
      font-family: arial, sans-serif;
      font-size: 25px;
      text-align: center;
    }

    h4 {
      font-family: arial, sans-serif;
      font-size: 15px;
      text-align: center;
    }

    input[type=text], select {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    font-size: 18px;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }

    input[type=submit] {
        width: 200px;
        background-color: #00BFFF;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    input[type=submit]:hover {
        background-color: #4169E1;
    }

    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
