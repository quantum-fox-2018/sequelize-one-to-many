<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subject List</title>
  </head>
  <body>

    <table>
      <tr>
        <th>id</th>
        <th>Subject</th>
        <th>guru</th>
        <th>action</th>
      </tr>

      <%for(let i = 0; i<subjectData.length; i++){%>
      <tr>
        <td><%=subjectData[i].id%></td>
        <td><%=subjectData[i].subjectName%></td>
        <td><%=subjectData[i].Teachers.map(t => t.firstName + " " + t.lastName)%></td>
        <td>
          <a href="/subjects/edit/<%=subjectData[i].id%>">edit</a> |

          <a href="/subjects/delete/<%=subjectData[i].id%>" onclick="return confirm('Are you sure you want to delete this item?');">delete</a>
        </td>
      </tr>
      <%}%>

    </table>
  </body>
</html>
