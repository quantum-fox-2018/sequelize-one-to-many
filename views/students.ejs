<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Student Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
    <h1 style="text-align: center">Students Data</h1>
    <a href="/students/addStudent">add student</a>
    <table style="width:100%">
        <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th> 
            <th>Email</th>
            <th>Options</th>
        </tr>
        <% if(studentData.length != undefined){%>
            <% for(let index =0; index<studentData.length; index++){ %>
                <tr>
                    <th><%= studentData[index].id%></th>
                    <th><%= studentData[index].first_name%></th>
                    <th><%= studentData[index].last_name%></th>
                    <th><%= studentData[index].email%></th>
                    <th><a href="/students/editStudent?id=<%=studentData[index].id%>">edit</a> | <a href="/students/deleteStudent?id=<%=studentData[index].id%>">delete</a></th>
                </tr>
            <%}%>
        <%}else{%>
            <h3 style="text-align: center">There is no student registered as of this moment!</h3>
        <%}%>

    </table>
</body>
</html>